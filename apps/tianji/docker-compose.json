{
  "version": "3.8",
  "services": [
    {
      "name": "tianji",
      "image": "moonrailgun/tianji:1.24.23",
      "isMain": true,
      "internalPort": 12345,
      "environment": {
        "DATABASE_URL": "postgresql://tianji:${POSTGRES_PASSWORD}@postgres:5432/tianji?schema=public",
        "JWT_SECRET": "${JWT_SECRET}",
        "ALLOW_REGISTER": "${ALLOW_REGISTER}",
        "ALLOW_OPENAPI": "${ALLOW_OPENAPI}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/app/data"
        }
      ],
      "dependsOn": {
        "postgres": {
          "condition": "service_healthy"
        }
      },
      "restart": "unless-stopped",
      "addToNetwork": true
    },
    {
      "name": "postgres",
      "image": "postgres:15.4-alpine",
      "environment": {
        "POSTGRES_DB": "tianji",
        "POSTGRES_USER": "tianji",
        "POSTGRES_PASSWORD": "${POSTGRES_PASSWORD}",
        "PGDATA": "/var/lib/postgresql/data/pgdata"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/pgdata",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "test": ["CMD-SHELL", "pg_isready -U tianji -d tianji"],
        "interval": "5s",
        "timeout": "5s",
        "retries": 5,
        "startPeriod": "30s"
      },
      "restart": "unless-stopped",
      "addToNetwork": true
    }
  ]
}
